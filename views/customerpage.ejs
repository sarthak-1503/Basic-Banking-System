<%- include("partials/header") %>

 <span class="icons">
    <i class="fa fa-arrow-left" id="back" aria-hidden="true" style="font-size: 1.5rem; margin-top: 1%;" onclick="window.location.href='/viewall'" title="Go back"></i>
</span>

<style>
    #record {
        margin-top: 2rem;
        margin-bottom: 3rem;
    }
    #transferbutton {
        outline: none;
        border: 0;
        border-radius: 0.4rem;
    }
    #transferbutton:hover {
        border: 2px solid #007bff;
        font-size: 1.2rem;
        background-color: white !important;
        color: #007bff;
        font-weight: bold;
    }
    th {
            padding: 1rem 5rem;
            border-right: 2px solid rgb(117, 113, 113);
            border-bottom:0.5px solid rgb(228, 228, 228) ;
            padding-right: 2.5rem;
            padding-left: 2.5rem;
            background-color: rgb(243, 134, 95);
    }
    td {
        padding-right: 10rem;
        padding-left: 10rem;
        background-color: rgb(143, 179, 245);
        font-weight: 700;
    }
</style>

<div style="text-align: center; margin: 3rem; ">
    <h2 style="color: rgb(167, 61, 61); font-weight: bolder;">
        <em>Customer Details</em>
    </h2>
</div>

<div id="record">
    <table>
        <tr>
            <th>Name</th>
            <td><%=record.name%></td>
        </tr>
        <tr>
            <th>Email ID</th>
            <td><%=record.email%></td>
        </tr>
        <tr>
            <th>Current Balance</th>
            <td>Rs. <%=record.currentBalance%></td>
        </tr>
    </table>
    
</div>

<div style="text-align: center; margin-top: 6rem;">
    <button id="transferbutton" class="btn btn-lg btn-primary"  onclick="window.location.href='/viewall/<%=record._id%>/transferto'">Transfer Money</button>
</div>

<%- include("partials/footer") %>