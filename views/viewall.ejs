<%- include("partials/header") %>


<style>
    .icons {
        margin: auto 0.8rem;
        cursor: pointer;
    }
    #hoverrows1 {
        background-color: rgb(243, 190, 75)
    }
    #hoverrows2 {
        background-color: rgb(248, 146, 78);
    }
    #hoverrows1:hover {
        background-color: rgb(209, 149, 236);
        /* text-shadow: -0.5rem 0.5rem red; */
        /* text-transform: uppercase; */
        /* table-layout: fixed; */
        font-size: 1rem;
        color: blue;
        font-weight: bold;
    } 
    #hoverrows2:hover {
        background-color: rgb(209, 149, 236);
        /* text-shadow: -0.5rem 0.5rem red; */
        /* text-transform: uppercase; */
        /* table-layout: fixed; */
        font-size: 1rem;
        color: blue;
        font-weight: bold;
    } 
    #eye {
        cursor: pointer;
        color: black;
    }
    #eye:hover {
        color: rgb(82, 82, 224);
        /* opacity: 0.6; */
    }
    
</style>

<div>
    <span class="icons">
        <i class="fa fa-arrow-left" id="back" aria-hidden="true" style="font-size: 1.5rem; margin-top: 1%;" onclick="window.location.href='/'" title="Go back"></i>
    </span>
    
     <span class="icons">
        <i class="fa fa-exchange" aria-hidden="true" id="back" style="font-size: 1.5rem; margin-top: 1%;" onclick="window.location.href='/transfers'" title="View Transfer History"></i>
     </span>
</div>

<div class="container">
    <table style="border: 2px solid black;">
        <tr style="background-color: rgb(240, 104, 81);">
            <th style="padding: 0.8rem 1.5rem;">
                <strong>S.No.</strong>
            </th>
            <th>
                <strong>Customer Name</strong>
            </th>
            <th>
                <strong>Email ID</strong>
            </th>
            <th>
                <strong>Current Balance (Rs.)</strong>
            </th>
            <th></th>
        </tr>
        <%var i;%> 
        <%for(i=0;i<customers.length;i++) {%>
            <%if(i%2 == 0) {%>
                <tr id="hoverrows1" >
                    <td style="padding: 0.8rem 1.5rem;">
                        <strong><%=(i+1)%></strong>
                    </td>
                    <td>
                        <%=customers[i].name%>
                    </td>
                    <td>
                        <%=customers[i].email%>
                    </td>
                    <td>
                        <%=customers[i].currentBalance%>
                    </td>
                    <td>
                        <i class="fas fa-eye" id="eye" style="font-size: 1.9rem;" onclick="window.location.href='/viewall/<%=customers[i]._id%>'"></i>
                    </td>
                </tr>
            <%}else{%>
                <tr id="hoverrows2" >
                    <td style="padding: 0.8rem 1.5rem;">
                        <strong><%=(i+1)%></strong>
                    </td>
                    <td>
                        <%=customers[i].name%>
                    </td>
                    <td>
                        <%=customers[i].email%>
                    </td>
                    <td>
                        <%=customers[i].currentBalance%>
                    </td>
                    <td>
                        <i class="fas fa-eye" id="eye" style="font-size: 1.9rem;" onclick="window.location.href='/viewall/<%=customers[i]._id%>'"></i>
                    </td>
                </tr>
            <%}%>
        <%}%>
    </table>
</div>



<%- include("partials/footer") %>