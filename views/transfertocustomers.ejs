<%- include("partials/header") %>


<span class="icons">
    <i class="fa fa-arrow-left" id="back" aria-hidden="true" style="font-size: 1.5rem; margin-top: 1%;" onclick="window.location.href='/viewall/<%=record._id%>'" title="Go back"></i>
</span>
<!-- <button onclick="window.location.href='/viewall/<%=record._id%>'">Back</button> -->

<style>
    td {
        text-align: center;
    }
    #transfer:hover {
            cursor: pointer;
            font-size: 10rem;
            color: #1A73E8;
            opacity:0.6;
    }
    #hoverrows1 {
        background-color: rgb(243, 190, 75);
    }
    #hoverrows2 {
        background-color: rgb(248, 146, 78);
    }
    #hoverrows1:hover {
        background-color: rgb(209, 149, 236);
        /* text-shadow: -0.5rem 0.5rem red; */
        /* text-transform: uppercase; */
        /* table-layout: fixed; */
        font-size: 1rem;
        color: blue;
        font-weight: bold;
    } 
    #hoverrows2:hover {
        background-color: rgb(209, 149, 236);
        /* text-shadow: -0.5rem 0.5rem red; */
        /* text-transform: uppercase; */
        /* table-layout: fixed; */
        font-size: 1rem;
        color: blue;
        font-weight: bold;
    } 
    #rows1 {
        background-color: rgb(243, 190, 75);
    }
    #rows2 {
        background-color: rgb(248, 146, 78);
    }
</style>

<div class="container">
    <div><h2 style="text-align:center; margin: 1.4rem auto 2.8rem auto; color: rgb(167, 61, 61); font-weight: bolder;"><em>Select a Payee...</em></h2></div>
    <table>
        <tr style="background-color: rgb(240, 104, 81);">
        <th style="padding: 0.8rem 1.5rem;">S.No.</th>
           <th>Name</th>
           <th>Email ID</th>
           <th>Current Balance</th> 
           <th></th>
        </tr>
        <% for(var i=0;i<10;i++) {%>
    
            <%let cid = JSON.stringify(customers[i]._id) %>
            <%let rid = JSON.stringify(record._id) %>
    
            <%if(cid.localeCompare(rid)) {%>
               <%if(i%2 == 0) {%>
                    <tr id="hoverrows1">
                        <td style="padding: 0.8rem 1.5rem;">
                            <strong><%=(i+1)%></strong>
                        </td>
                        <td><%=customers[i].name%></td>
                        <td><%=customers[i].email%></td>
                        <td><%=customers[i].currentBalance%></td>
                        <td>
                            <i class="fas fa-exchange-alt" onclick="window.location.href='/viewall/<%=record._id%>/transferto/<%=customers[i]._id%>'" id="transfer" style="font-size: 2rem;"></i>
                        </td>
                        
                    </tr>
                <%}else{%>
                    <tr id="hoverrows2">
                        <td style="padding: 0.8rem 1.5rem;">
                            <strong><%=(i+1)%></strong>
                        </td>
                        <td><%=customers[i].name%></td>
                        <td><%=customers[i].email%></td>
                        <td><%=customers[i].currentBalance%></td>
                        <td>
                            <i class="fas fa-exchange-alt" onclick="window.location.href='/viewall/<%=record._id%>/transferto/<%=customers[i]._id%>'" id="transfer" style="font-size: 2rem;"></i>
                        </td>
                        
                    </tr>
                <%}%>
            <%}else{%>
                <%if(i%2 == 0) {%>
                    <tr id="rows1">
                        <td style="padding: 0.8rem 1.5rem; opacity: 0.2; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet; border-left: 7px solid blueviolet;">
                            <strong><%=(i+1)%></strong>
                        </td>
                        <td style="font-weight: lighter; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet;"><%=customers[i].name%></td>
                        <td style="font-weight: lighter; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet;"><%=customers[i].email%></td>
                        <td style="font-weight: lighter; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet;"><%=customers[i].currentBalance%></td>
                        <td style="font-weight: lighter; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet; border-right: 7px solid blueviolet;">
                            <i class="fas fa-exchange-alt" style="font-size: 2rem; opacity: 0.2;"></i>
                        </td>
                        
                    </tr>
                <%}else{%>
                    <tr id="rows2">
                        <td style="padding: 0.8rem 1.5rem; opacity: 0.2; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet; border-left: 7px solid blueviolet;">
                            <strong><%=(i+1)%></strong>
                        </td>
                        <td style="font-weight: lighter; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet;"><%=customers[i].name%></td>
                        <td style="font-weight: lighter; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet;"><%=customers[i].email%></td>
                        <td style="font-weight: lighter; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet;"><%=customers[i].currentBalance%></td>
                        <td style="font-weight: lighter; border-top: 7px solid blueviolet; border-bottom: 7px solid blueviolet; border-right: 7px solid blueviolet;">
                            <i class="fas fa-exchange-alt" style="font-size: 2rem; opacity: 0.2;"></i>
                        </td>
                    </tr>
                <%}%>
            <%}%>
        <%}%>
    </table>
</div>

<%- include("partials/footer") %>

