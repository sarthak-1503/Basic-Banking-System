<%- include("partials/header") %>


<span class="icons">
    <i class="fa fa-arrow-left" id="back" aria-hidden="true" style="font-size: 1.5rem; margin-top: 1%;" onclick="window.location.href='/viewall/<%=record._id%>'" title="Go back"></i>
</span>
<!-- <button onclick="window.location.href='/viewall/<%=record._id%>'">Back</button> -->

<style>
    td {
        text-align: center;
    }
    #transfer:hover {
            cursor: pointer;
            font-size: 10rem;
            color: #1A73E8;
            opacity:0.6;
        }
</style>

<div class="container">
    <table>
        <tr>
           <th>Name</th>
           <th>Email ID</th>
           <th>Current Balance (Rs.)</th> 
           <th></th>
        </tr>
        <% for(var i=0;i<10;i++) {%>
    
            <%let cid = JSON.stringify(customers[i]._id) %>
            <%let rid = JSON.stringify(record._id) %>
    
            <%if(cid.localeCompare(rid)) {%>
                <tr>
                    <td><%=customers[i].name%></td>
                    <td><%=customers[i].email%></td>
                    <td><%=customers[i].currentBalance%></td>
                    <td>
                        <i class="fas fa-exchange-alt" onclick="window.location.href='/viewall/<%=record._id%>/transferto/<%=customers[i]._id%>'" id="transfer" style="font-size: 2rem;"></i>
                    </td>
                    
                </tr>
            <%}%>
        <%}%>
    </table>
</div>

<%- include("partials/footer") %>

